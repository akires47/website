---
interface Company {
  name: string;
  url: string;
  colorClass: string;
}

interface Social {
  name: string;
  url: string;
  icon: string;
}

interface Props {
  name: string;
  title: string;
  avatarUrl: string;
  tagline: string;
  companies: Company[];
  socials: Social[];
  email: string;
}

const { name, title, avatarUrl, tagline, companies, socials, email } = Astro.props;
---

<section class="relative h-screen min-h-screen flex flex-col items-center justify-center p-6 overflow-hidden bg-zinc-950">
    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-violet-500/10 rounded-full blur-[120px]"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-cyan-500/10 rounded-full blur-[120px]"></div>
        <div class="absolute top-[40%] left-[50%] -translate-x-1/2 -translate-y-1/2 w-[60%] h-[60%] bg-fuchsia-500/5 rounded-full blur-[100px]"></div>
    </div>

    <div class="relative z-10 w-full max-w-5xl flex flex-col md:flex-row items-center justify-center md:justify-between gap-12 md:gap-20">
        
        <!-- Avatar Section -->
        <div class="order-1 md:order-2 flex-shrink-0 relative group">
            <div class="absolute -inset-1 bg-gradient-to-br from-violet-600 via-fuchsia-500 to-cyan-500 rounded-full opacity-70 blur group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative w-48 h-48 md:w-80 md:h-80 rounded-full p-[2px] bg-zinc-950 overflow-hidden">
                <div class="w-full h-full rounded-full overflow-hidden bg-zinc-900 border border-zinc-800">
                    <img src={avatarUrl} alt={name} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" loading="eager">
                </div>
            </div>
        </div>

        <!-- Text Content -->
        <div class="order-2 md:order-1 text-center md:text-left flex flex-col items-center md:items-start">
            <div class="mb-4 inline-flex items-center gap-2 px-3 py-1 rounded-full border border-violet-500/30 bg-violet-500/10 text-violet-300 text-sm font-medium backdrop-blur-sm">
                <span class="relative flex h-2 w-2">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-violet-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-2 w-2 bg-violet-500"></span>
                </span>
                {companies.map((company) => (
                    <span>Building @ {company.name}</span>
                ))}
            </div>

            <h1 class="text-6xl md:text-8xl font-display font-bold mb-2 tracking-tight leading-none text-zinc-100">
                {name.split(' ')[0]}<br/>
                <span class="bg-gradient-to-r from-violet-400 via-fuchsia-400 to-cyan-400 bg-clip-text text-transparent">{name.split(' ')[1]}</span>
            </h1>

            <p class="text-2xl md:text-3xl font-light text-zinc-400 mb-6 font-display">
                {title}
            </p>

            <p class="text-zinc-500 text-lg max-w-md mb-10 leading-relaxed">
                {tagline}
            </p>

            <div class="flex flex-col sm:flex-row items-center gap-4 w-full sm:w-auto">
                <a href={`mailto:${email}`} class="w-full sm:w-auto px-8 py-3 bg-zinc-100 text-zinc-950 rounded-full font-bold hover:bg-white hover:scale-105 transition-all duration-300 flex items-center justify-center gap-2">
                    <span>Let's talk</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
                </a>
                
                <div class="flex gap-2">
                    {socials.map((social) => (
                        <a href={social.url} target="_blank" class="p-3 bg-zinc-900/50 border border-zinc-800 rounded-full text-zinc-400 hover:text-white hover:border-violet-500/50 hover:bg-violet-500/10 transition-all duration-300 backdrop-blur-sm" aria-label={social.name}>
                            <Fragment set:html={social.icon} />
                        </a>
                    ))}
                </div>
            </div>
        </div>
    </div>
    
    <!-- Decorative geometric elements -->
    <div class="absolute top-10 right-10 w-24 h-24 border border-zinc-800/30 rounded-full hidden md:block animate-[spin_10s_linear_infinite]"></div>
    <div class="absolute bottom-10 left-10 w-32 h-32 border border-dashed border-zinc-800/30 rounded-full hidden md:block animate-[spin_15s_linear_infinite_reverse]"></div>
</section>
